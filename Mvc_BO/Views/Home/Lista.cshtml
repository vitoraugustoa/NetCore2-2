@model IEnumerable<Mvc_BO.Models.Aluno>

@*@{
    Layout = null;
}*@

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Lista</title>
</head>
<body>
<h1>Lista de Alunos</h1>
<hr />
<p>
    <a asp-action="Create">Criar Nova Aluno</a>
</p>
    <p>
        @using (Html.BeginForm("Procurar", "Home", FormMethod.Get)){

            <b>Procurar Por:</b>
            @Html.RadioButton("ProcurarPor", "Nome", true)<text> Nome </text>
            @Html.RadioButton("ProcurarPor", "Email", true)<text> Email </text>
            @Html.TextBox("criterio")<input type="submit" value="Procurar"/>
        }
    </p>


<table class="table" border="1">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Nome)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Sexo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                 @Html.DisplayNameFor(model => model.Nascimento)
            </<mat-slider thumbLabel tickInterval=""></mat-slider>>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
    @using(Html.BeginForm("Delete", "Home", new { id = item.Id })){

        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sexo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nascimento)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new {  id = item.Id  }) |
                @Html.ActionLink("Detalhes", "Details", new {  id = item.Id  }) |
                <!-- @Html.ActionLink("Deletar", "Delete", new { id = item.Id }) -->
                <input type="submit" value="Deletar" 
                onclick="return confirm('Confirme a exclusÃ£o do aluno @item.Nome')"/>

            </td>
        </tr>
    }
}
    </tbody>
</table>
</body>
</html>



